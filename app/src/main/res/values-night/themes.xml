<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Notes" parent="ThemeOverlay.AppCompat.Dark">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/main</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.RemoveSplashScreenTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="CustomDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.5</item> <!-- Dim background -->
    </style>
    <style name="Bottom_Sheet_Style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name = "Screen">
        <item name="background" > @color/black</item>
    </style>
    <style name = "Screen1">
        <item name="android:background">@color/black</item>
        <item name="backgroundTint" > @color/black</item>
    </style>
    <style name="FragmentStyle">
        <item name="android:background">#121212</item> <!-- Dark Background -->
        <item name="android:textColor">#FFFFFF</item>  <!-- White Text -->
    </style>
    <style name="Textview">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="imageview">
        <item name="tint">@color/white</item>
        <item name="backgroundTint">#333439</item>
    </style>
    <style name="cardview">
        <item name="cardBackgroundColor">#333439</item>
    </style>
    <style name="nagivation">
        <item name="background">@color/black</item>
        <item name="backgroundTint">@color/black</item>
        <item name="itemIconTint">#88888b</item>
        <item name="itemTextColor">@color/white</item>
    </style>
    <style name="langagebackground">
        <item name="android:background">@color/background_light</item>
    </style>
    <style name="imagetint">
        <item name="tint">@color/white</item>
    </style>

    <style name="frgmentbackground">
        <item name="backgroundTint">#333439</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:backgroundTint">#3C3C3C</item>
    </style>
    <style name="sorting">
        <item name="cardBackgroundColor">@color/darkgray</item>
    </style>
    <style name="CustomLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/textviewbackgrounf</item>
        <item name="android:backgroundTint">#333439</item>
    </style>

    <style name="CustomLinearLayout2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/textviewbackgrounf</item>
        <item name="android:backgroundTint">#414143</item>
    </style>
</resources>